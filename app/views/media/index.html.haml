- title "Media"

%table.list
  %tr
    %th Name
    %th Description
    %th State
  - for medium in @media
    %tr
      %td= h medium.name
      %td= h medium.description
      %td= h medium.state
      %td= link_to 'Show', medium
      %td= link_to 'Edit', edit_medium_path(medium)
      %td= link_to 'Destroy', medium, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Medium", new_medium_path
