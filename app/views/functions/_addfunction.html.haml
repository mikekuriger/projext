#addfunction
  %h3 New Function
  - function = Function.new
  #addfunctionform
    - semantic_remote_form_for function, |
      :loading => "$('#add_spinner').show();", |
      :loaded => "$('#add_spinner').hide();", |
      :update => 'functionlist', |
      :position => 'bottom', |
      :failure => "alert('Unable to create, status ' + request.status)", |
      :complete => visual_effect(:highlight, dom_id(function, 'row')) do |f| |
      - f.inputs do
        = f.input :name
        = f.input :description
        = f.commit_button
        = image_tag 'ajax-loader.gif', :style => 'display: none;', :id => 'add_spinner'
