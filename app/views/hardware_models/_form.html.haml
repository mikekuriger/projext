- semantic_form_for @hardware_model, :html => { :multipart => true } do |f|
  = f.error_messages
  - f.inputs do
    = f.input :name
    = f.input :description
    = f.input :manufacturer
    = f.input :rackunits, :label => "Size (RMU)"
    = f.input :picture, :label => "Product Picture"
    = f.input :rack_front, :label => "Rack Picture (front view)"
    = f.input :rack_rear, :label => "Rack Picture (rear view)"
  = f.buttons