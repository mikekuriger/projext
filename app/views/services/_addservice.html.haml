#addservice
  %h3 Add Service
  - service = Service.new
  #addserviceform
    - semantic_remote_form_for service, |
      :loading => "$('#add_spinner').show();", |
      :loaded => "$('#add_spinner').hide();", |
      :update => 'servicelist', |
      :position => 'bottom', |
      :failure => "alert('Unable to create, status ' + request.status)", |
      :complete => visual_effect(:highlight, dom_id(service, 'row')) do |f| |
      
      - f.inputs do
        = f.input :cluster
        = f.input :function
        = f.commit_button
        = image_tag 'ajax-loader.gif', :style => 'display: none;', :id => 'add_spinner'
