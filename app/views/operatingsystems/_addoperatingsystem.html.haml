#addoperatingsystem
  %h3 New Operating System
  - operatingsystem = Operatingsystem.new
  #addoperatingsystemform
    - semantic_remote_form_for operatingsystem, |
      :loading => "$('#add_spinner').show();", |
      :loaded => "$('#add_spinner').hide();", |
      :update => 'operatingsystemlist', |
      :position => 'bottom', |
      :failure => "alert('Unable to create, status ' + request.status)", |
      :complete => [ |
        visual_effect(:highlight, dom_id(operatingsystem, 'row')) |
        ] do |f| |
      - f.inputs do
        = f.input :name
        = f.input :description
        = f.input :manufacturer
        = f.input :ostype, :label => 'OS Type'
        = f.input :version
        = f.input :architecture
        = f.commit_button
        = image_tag 'ajax-loader.gif', :style => 'display: none;', :id => 'add_spinner'