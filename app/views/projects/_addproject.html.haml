#addproject
  %h3 Add Project
  - project = Project.new
  #addprojectform
    - semantic_remote_form_for project, |
      :loading => "$('#add_spinner').show();", |
      :loaded => "$('#add_spinner').hide();", |
      :update => 'projectlist', |
      :position => 'bottom', |
      :failure => "alert('Unable to create, status ' + request.status)", |
      :complete => visual_effect(:highlight, dom_id(project, 'row')) do |f| |
      
      - f.inputs do
        = f.input :name
        = f.input :description
        = f.input :customer, :required => true
        = f.commit_button
        = image_tag 'ajax-loader.gif', :style => 'display: none;', :id => 'add_spinner'
