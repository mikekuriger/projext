- title "Contacts"

%table.list
  %tr
    %th Name
    %th Phone
    %th Cell
    %th Email
    %th Notes
    %th Apps
    %th Actions
  - for contact in @contacts
    %tr
      %td
        = h contact.first_name
        = h contact.middle_name
        = h contact.last_name
      %td= h contact.phone
      %td= h contact.cell
      %td= h contact.email
      %td= h contact.notes
      %td
        - contact.apps.each do |app|
          = link_to app.name, app if can? :read, app
      %td.actions
        = link_to 'Show', contact
        = link_to 'Edit', edit_contact_path(contact)
        = link_to 'Destroy', contact, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Contact", new_contact_path
