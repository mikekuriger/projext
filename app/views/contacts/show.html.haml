- title "Contact"

%p
  %strong Name:
  =h @contact.first_name
  =h @contact.middle_name
  =h @contact.last_name
%p
  %strong Title:
  =h @contact.title
%p
  %strong Phone:
  =h @contact.phone
%p
  %strong Cell:
  =h @contact.cell
%p
  %strong Email:
  =h @contact.email
%p
  %strong Notes:
  =h @contact.notes

%p
  = link_to "Edit", edit_contact_path(@contact)
  |
  = link_to "Destroy", @contact, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", contacts_path
