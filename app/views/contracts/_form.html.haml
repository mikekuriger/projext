- semantic_form_for @contract, :html => { :multipart => true } do |f|
  = f.error_messages
  - f.inputs :name => 'General Information' do
    = f.input :name
    = f.input :description
    = f.input :number
    = f.input :supportlevel, :label => 'Support Level'
    = f.input :vendor
    = f.input :start, :label => 'Start Date'
    = f.input :end, :label => 'End Date'
    -# = f.input :quote
    -# = f.input :purchaseorder
    = f.input :notes
    
  - f.inputs :name => 'Contract Documents' do
    - f.semantic_fields_for :documents do |builder|
      = render 'document_fields', :f => builder
    = link_to_add_fields "Add Document", f, :documents
    
  = f.buttons