- semantic_form_for @purchase_order, :html => { :multipart => true } do |f|
  = f.error_messages
  - f.inputs do
    = f.input :name
    = f.input :description
    = f.input :created
    = f.input :sent
    = f.input :vendor
    = f.input :number
    = f.input :amount
    = f.input :notes
    
  - f.inputs :name => 'Purchase Order Documents' do
    - f.semantic_fields_for :documents do |builder|
      = render 'document_fields', :f => builder
    = link_to_add_fields "Add Document", f, :documents
    
  = f.buttons